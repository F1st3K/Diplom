<Window x:Class="AttendanceTracking.View.Forms.AccountsEditForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AttendanceTracking.View.Forms"
        mc:Ignorable="d"
        Title="AccountsEditForm" Height="250" Width="400">
    <StackPanel>

        <TextBlock>
            Настройка учетной записи для:
            <Run Name="Fullname"/>
            , роль: 
            <Run Name="TextRoles"/>
        </TextBlock>
        
        <TextBox Name="Login"/>
        <TextBox Name="Password"/>
        <Button Content="Применить изменения"
                Click="EditClick"/>
        <Button Content="Обратно к УЗ"
                Click="CloseClick"/>
    </StackPanel>
</Window>

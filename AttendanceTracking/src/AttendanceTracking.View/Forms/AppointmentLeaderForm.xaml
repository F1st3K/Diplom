<Window x:Class="AttendanceTracking.View.Forms.AppointmentLeaderForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AttendanceTracking.View.Forms"
        mc:Ignorable="d"
        Title="Назначение старосты" Height="250" Width="450">
    <Grid>
        <TextBlock
            FontSize="15"
            Margin="10"
            HorizontalAlignment="Center"
            >
            <Run>Текущий староста группы</Run>
            <Run Name="GroupText"/>
            <Run>−</Run>
            <LineBreak/>
            <Run Name="LeaderText"/>
        </TextBlock>
        <StackPanel
            Orientation="Horizontal"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"
            >
            <ComboBox Name="Students"
                      FontSize="15"
                      Margin="10, 0"
                      Width="200pt"/>
            <Button Name="SetLeader"
                    FontSize="15"
                    Margin="10, 0"
                    Content="Назначить старостой"/>
        </StackPanel>
        
    </Grid>
</Window>
